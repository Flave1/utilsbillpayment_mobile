<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kindly check email for OTP Code."
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorWhite"
        android:gravity="center"
        app:fontFamily="@font/roboto_regular"/>


        <LinearLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
        <com.chaos.view.PinView
            android:id="@+id/firstPinView"
            style="@style/PinWidget.PinView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:cursorVisible="true"
            android:inputType="number"
            android:padding="5dp"
            android:textColor="@color/colorlightPrimary"
            android:textSize="18sp"
            android:textStyle="bold"
            app:itemRadius="5dp"
            app:lineWidth="1dp"
            app:cursorColor="@color/colorlightPrimary"
            app:hideLineWhenFilled="false"
            />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@color/colorYellow"
        android:weightSum="2">

        <androidx.appcompat.widget.AppCompatTextView android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Submit"
            android:textColor="@color/colorblack"
            android:gravity="center"
            app:fontFamily="@font/roboto_regular"
            android:id="@+id/submitDialog"/>

    </LinearLayout>

</LinearLayout>