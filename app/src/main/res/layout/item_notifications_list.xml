<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/listItem"
    android:paddingBottom="10dp">


    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_chips_home"
        android:padding="5dp"
        android:gravity="center"
        android:orientation="horizontal">


    <!--    <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">-->



            <TextView android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/_6sdp"
                android:maxLines="1"
                android:padding="@dimen/_4sdp"
                android:ellipsize="end"
                android:id="@+id/notificationTitleTV"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/colorYellow"
                android:text="#2345121"/>




      <!--  </LinearLayout>-->


        <TextView android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/terms_conditions"
            android:textColor="@color/colorWhite"
            android:padding="@dimen/_4sdp"
            android:id="@+id/notificationMessageTV"
            android:fontFamily="@font/roboto_regular"
            android:textSize="@dimen/_6ssp"/>

        <TextView android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="24 Aug, 19"
            android:textColor="@color/colorWhite"
            android:gravity="end"
            android:id="@+id/dateNotificationTV"
            android:textSize="@dimen/_6ssp"
            android:layout_marginTop="@dimen/_4sdp"
            android:fontFamily="@font/roboto_regular"/>

    </LinearLayout>

</RelativeLayout>